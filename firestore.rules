rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 헬퍼 함수: 인증 확인
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // 헬퍼 함수: 소유자 확인
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // 대화 스레드 (conversations)
    match /conversations/{conversationId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
    
    // 메시지 (messages)
    match /messages/{messageId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
    
    // 감정 데이터 (emotions)
    match /emotions/{emotionId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
    
    // 일기 데이터 (diaries)
    match /diaries/{diaryId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
    
    // 사용자 프로필 (userProfiles)
    match /userProfiles/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // 마이크로 액션 로그 (microActions)
    match /microActions/{actionId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }
    
    // 타임라인 엔트리 (timeline)
    match /timeline/{entryId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }

    // 주간 리포트 (weeklyReports)
    match /weeklyReports/{reportId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }

    // 월간 리포트 (monthlyReports)
    match /monthlyReports/{reportId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }

    // 큐레이션 콘텐츠 (contents)
    match /contents/{contentId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }

    // 게이미피케이션 데이터 (gamification)
    match /gamification/{gamificationId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }

    // XP 로그 (xpLogs)
    match /xpLogs/{logId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // XP 로그는 수정/삭제 불가 (감사 목적)
      allow update: if false;
      allow delete: if false;
    }

    // 사용자 데이터 (users 컬렉션 하위 문서들)
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // 동의 로그 (consentLogs)
      match /consentLogs/{logId} {
        allow read, write: if isOwner(userId);
      }

      // 온보딩 데이터 (onboarding)
      match /onboarding/{docId} {
        allow read, write: if isOwner(userId);
      }

      // 설정 (settings)
      match /settings/{settingId} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}
